#define ZMK_POINTING_DEFAULT_MOVE_VAL 1300
#define ZMK_POINTING_DEFAULT_SCRL_VAL 18

#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

&mt { flavor = "balanced"; };

&caps_word {
    mods = <(MOD_LSFT)>;
    continue-list = <UNDERSCORE BACKSPACE DELETE MINUS>;
};

/ {
    combos {
        compatible = "zmk,combos";

        esclamation {
            bindings = <&kp EXCLAMATION>;
            key-positions = <1 13>;
            layers = <0>;
        };

        at {
            bindings = <&kp AT_SIGN>;
            key-positions = <2 14>;
            layers = <0>;
        };

        hash {
            bindings = <&kp HASH>;
            key-positions = <3 15>;
            layers = <0>;
        };

        dollar {
            bindings = <&kp DOLLAR>;
            key-positions = <4 16>;
            layers = <0>;
        };

        percent {
            bindings = <&kp PERCENT>;
            key-positions = <5 17>;
        };

        caret {
            bindings = <&kp CARET>;
            key-positions = <6 18>;
            layers = <0>;
        };

        ampersand {
            bindings = <&kp AMPERSAND>;
            key-positions = <7 19>;
            layers = <0>;
        };

        asterisk {
            bindings = <&kp ASTERISK>;
            key-positions = <8 20>;
            layers = <0>;
        };

        left-parentheses {
            bindings = <&kp LEFT_PARENTHESIS>;
            key-positions = <9 21>;
            layers = <0>;
        };

        right-parentheses {
            bindings = <&kp RIGHT_PARENTHESIS>;
            key-positions = <10 22>;
            layers = <0>;
        };

        left-braket {
            bindings = <&kp LEFT_BRACKET>;
            key-positions = <15 27>;
            layers = <0>;
        };

        right-bracket {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <16 28>;
            layers = <0>;
        };

        left-brace {
            bindings = <&kp LEFT_BRACE>;
            key-positions = <19 31>;
            layers = <0>;
        };

        right-brace {
            bindings = <&kp RIGHT_BRACE>;
            key-positions = <20 32>;
            layers = <0>;
        };

        grave {
            bindings = <&kp GRAVE>;
            key-positions = <17 29>;
            layers = <0>;
        };

        tilde {
            bindings = <&kp TILDE>;
            key-positions = <18 30>;
            layers = <0>;
        };

        enter {
            bindings = <&kp ENTER>;
            key-positions = <37 29>;
        };

        prmc {
            bindings = <&prmc>;
            key-positions = <31 32>;
            layers = <0>;
        };

        bkmc {
            bindings = <&bkmc>;
            key-positions = <32 33>;
            layers = <0>;
        };

        bcmc {
            bindings = <&bcmc>;
            key-positions = <33 34>;
            layers = <0>;
        };

        copy {
            bindings = <&kp LC(C)>;
            key-positions = <26 27>;
            layers = <0>;
        };

        paste {
            bindings = <&kp LC(V)>;
            key-positions = <27 28>;
            layers = <0>;
        };

        new-tab {
            bindings = <&kp LC(T)>;
            key-positions = <16 17>;
            layers = <0>;
        };

        open-tab {
            bindings = <&kp LC(LS(T))>;
            key-positions = <17 16 15>;
        };

        numpad-period {
            bindings = <&kp PERIOD>;
            key-positions = <31 32>;
            layers = <2>;
        };

        numpad-comma {
            bindings = <&kp COMMA>;
            key-positions = <33 32>;
        };
    };

    macros {
        prmc: parentheses {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_PARENTHESIS &kp RIGHT_PARENTHESIS &kp LEFT>;
            label = "PARENTHESES";
        };

        bkmc: pbk {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_BRACKET &kp RIGHT_BRACKET &kp LEFT>;
            label = "PBK";
        };

        bcmc: bcmc {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_BRACE &kp RIGHT_BRACE &kp LEFT>;
            label = "BCMC";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        Colemak {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            display-name = "Colemak";
            bindings = <
&kp ESCAPE     &kp Q           &kp W           &kp F             &kp P         &kp B        &kp J        &kp L        &kp U              &kp Y            &kp SEMICOLON    &kp EQUAL
&kp BACKSPACE  &mt LEFT_GUI A  &mt LEFT_ALT R  &mt LEFT_SHIFT S  &mt LCTRL T   &kp G        &kp M        &mt RCTRL N  &mt RIGHT_SHIFT E  &mt RIGHT_ALT I  &mt RIGHT_GUI O  &kp SQT
&kp MINUS      &kp Z           &kp X           &kp C             &kp D         &kp V        &kp K        &kp H        &kp COMMA          &kp DOT          &kp FSLH         &kp NON_US_BACKSLASH
                                               &kp PRINTSCREEN   &lt 1 DELETE  &lt 2 TAB    &lt 3 ENTER  &kp SPACE    &caps_word
            >;

            label = "Colemak";
        };

        NavFunc {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "NavFunc";
            bindings = <
&trans      &kp F1             &kp F2           &kp F3             &kp F4        &kp F5     &kp PAGE_UP    &kp HOME        &kp UP_ARROW          &kp END              &kp INSERT           &none
&trans      &mt LEFT_GUI F6    &mt LEFT_ALT F7  &mt LEFT_SHIFT F8  &mt LCTRL F9  &kp F10    &kp PAGE_DOWN  &mt RCTRL LEFT  &mt RIGHT_SHIFT DOWN  &mt RIGHT_ALT RIGHT  &mt RIGHT_GUI ENTER  &none
&kp C_MUTE  &kp C_VOLUME_DOWN  &kp C_VOLUME_UP  &kp F11            &kp F12       &none      &none          &none           &none                 &none                &none                &none
                                                &trans             &trans        &trans     &trans         &trans          &none
            >;

            label = "NavFunc";
        };

        Numpad {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Numpad";
            bindings = <
&trans  &kp EXCLAMATION     &kp AT_SIGN             &kp HASH              &kp DOLLAR                  &kp PERCENT              &kp MINUS  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp PLUS   &kp BSPC
&trans  &mt LEFT_GUI CARET  &mt LEFT_ALT AMPERSAND  &mt LEFT_SHIFT ASTRK  &mt LCTRL LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS    &kp ASTRK  &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &kp ENTER  &kp COLON
&none   &kp LEFT_BRACE      &kp RIGHT_BRACE         &kp LEFT_BRACKET      &kp RIGHT_BRACKET           &none                    &kp SLASH  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp TAB    &none
                                                    &trans                &trans                      &trans                   &trans     &trans        &kp NUMBER_0
            >;

            label = "Numpad";
        };

        MouseBT {
            display-name = "MouseBT";
            bindings = <
&none   &none         &none         &none           &none         &none           &msc SCRL_LEFT   &msc SCRL_UP    &mmv MOVE_UP    &msc SCRL_DOWN   &none      &none
&trans  &kp LEFT_GUI  &kp LEFT_ALT  &kp LEFT_SHIFT  &kp LCTRL     &bt BT_CLR      &msc SCRL_RIGHT  &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &kp ENTER  &none
&none   &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2    &bt BT_SEL 3  &bt BT_SEL 4    &none            &mkp MB1        &mkp MB2        &mkp MB3         &mkp MB4   &mkp MB5
                                    &trans          &trans        &trans          &trans           &trans          &none
            >;

            label = "MouseBT";
        };
    };
};
